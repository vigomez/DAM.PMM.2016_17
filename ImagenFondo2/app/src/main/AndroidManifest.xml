<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aigua.imagenfondo2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- Por defecto lanzaría la APP desde primer Activity definido
        <activity android:name=".MainActivity">
        Ahora le obligamos a que empiece por el otro-->
        <activity android:name=".Main2Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--Por defecto el segundo Activity va después
        <activity android:name=".Main2Activity"></activity>
        Ahora le decimos después vaya el primer activity-->
        <activity android:name=".MainActivity"></activity>
    </application>

</manifest>